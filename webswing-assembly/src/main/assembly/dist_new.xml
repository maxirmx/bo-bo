<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<scope>compile</scope>
			<outputFileNameMapping>
				${artifact.artifactId}.${artifact.extension}
			</outputFileNameMapping>
			<outputDirectory>
				/proxyService
			</outputDirectory>
			<includes>
				<include>*:war</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<scope>compile</scope>
			<outputDirectory>
				/lib
			</outputDirectory>
			<outputFileNameMapping>
				${artifact.artifactId}.${artifact.extension}
			</outputFileNameMapping>
			<includes>
				<include>xx.yy:webswing-app-toolkit:jar</include>
				<include>xx.yy:webswing-app-launcher:jar</include>
				<include>xx.yy:webswing-log-collector:jar</include>
				<include>org.slf4j:slf4j-api:jar</include>
				<include>org.slf4j:slf4j-simple:jar</include>
				<include>org.codehaus.jackson:jackson-mapper-asl:jar</include>
				<include>org.codehaus.jackson:jackson-core-asl:jar</include>
				<include>xx.yy:client-proxy:jar</include>
				<include>xx.yy:certMgr:exe</include>
				<include>xx.yy:baseutil:jar</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${basedir}/src/main/webproxy</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/webproxy/proxyService/install</directory>
			<outputDirectory>/install</outputDirectory>
			<includes>
				<include>java.policy</include>
				<include>uninstall.vbs</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/demo</directory>
			<outputDirectory>/proxyService</outputDirectory>
			<excludes>
				<exclude>webswing.sh</exclude>
				<exclude>config/webswing.config</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/demo</directory>
			<outputDirectory>/proxyService</outputDirectory>
			<includes>
				<include>*.exe</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/demo</directory>
			<outputDirectory>/proxyService</outputDirectory>
			<fileMode>0774</fileMode>
			<includes>
				<include>webswing.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/demo</directory>
			<outputDirectory>/install</outputDirectory>
			<fileMode>0774</fileMode>
			<includes>
				<include>config/webswing.config</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
